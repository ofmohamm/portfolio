---
import '../styles/global.css';
import Header from '../components/Header.astro';
import CustomCursor from '../components/CustomCursor';
import Footer from '../components/Footer.astro';
import SmoothScroll from '../components/SmoothScroll.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Electrical engineering student at Syracuse University specializing in embedded systems, FPGA design, and PCB development.",
  image = "/og-image.png"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://omarmohammed.co');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Source+Sans+3:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />

    <!-- Geist fonts from Vercel -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/geist@1.2.0/dist/fonts/geist-sans/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/geist@1.2.0/dist/fonts/geist-mono/style.css">

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalURL} />

    <title>{title}</title>

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Omar Mohammed",
        "jobTitle": "Electrical Engineering Student",
        "affiliation": {
          "@type": "CollegeOrUniversity",
          "name": "Syracuse University"
        },
        "url": "https://omarmohammed.com",
        "sameAs": [
          "https://linkedin.com/in/ofmohammed",
          "https://github.com/ofmohamm"
        ]
      }
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Grain texture overlay -->
    <div class="grain-overlay" aria-hidden="true"></div>

    <!-- Skip link -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <!-- Header with navigation -->
    <Header />

    <!-- Custom cursor -->
    <CustomCursor client:load />

    <!-- Smooth scroll -->
    <SmoothScroll />

    <main id="main-content" class="flex-1">
      <slot />
    </main>

    <Footer />
  </body>
</html>
